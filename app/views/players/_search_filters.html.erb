<%= form_with url: players_path, method: :get, local: true do |f| %>
  <%= f.label :query, "Search by name:" %>
  <%= f.text_field :query %>

  <%= f.label :club, "Club:" %>
  <%= f.select :club, Club.pluck(:abbreviation), :include_blank => true %>

  <%= f.label :pos, "Position:" %>
  <%= f.select :pos, [ 'DEF', 'MID', 'RUC', 'FWD' ], :include_blank => true %>

  <%= f.submit "Search", :class => 'submit' %>
<% end %>

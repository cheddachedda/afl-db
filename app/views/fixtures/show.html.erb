<%= render 'breadcrumbs' %>

<div class="scoreboard">
  <div class="team-container home">
    <p><%= @fixture.clubs[0].name %></p>
    <p><%= @fixture.home.wins %><%= "-#{ @fixture.home.losses}" %><%= "-#{ @fixture.home.draws }" unless @fixture.home.draws == 0 %></p>
  </div>

  <div class="score-container">
    <p><%= @fixture.home_score %> <%= @fixture.away_score %></p>
  </div>

  <div class="team-container away">
    <p><%= @fixture.clubs[1].name %></p>
    <p><%= @fixture.away.wins %><%= "-#{ @fixture.away.losses}" %><%= "-#{ @fixture.away.draws }" unless @fixture.away.draws == 0 %></p>
  </div>
</div>

<%= render 'player_list', players: @fixture.home_players %>
<%= render 'player_list', players: @fixture.away_players %>

<table>

  <thead>
    <tr>
      <th class="key-column">Player</th>
      <th>Pts</th>
    </tr>
  </thead>

  <tbody>
    <% players.each do |player| %>
      <tr>
        <td class="key-column"><%= link_to "#{ player.name }", player_path(player.id) %> <%= player.position.join('/') %></td>
        <td class="bold"><%= player.fantasy_scores[@r] %></td>
      </tr>
    <% end %>
  </tbody>

</table>

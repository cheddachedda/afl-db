<h1>Fixtures</h1>

<div class="rounds-nav-bar">
  <% @rounds.each do |round| %>
    <%= link_to round, round_path(round) %>
  <% end %>
</div>

<% if @fixtures.present? %>
  <table>
    <thead>
      <tr>
        <th>date</th>
        <th>time</th>
        <th>home</th>
        <th></th>
        <th>away</th>
        <th>venue</th>
        <th></th>
      </tr>
    </thead>

    <% @fixtures.each do |fixture| %>
      <tr>
        <td><%= fixture.datetime.localtime.strftime('%a  %d %b') %></td>
        <td><%= fixture.datetime.localtime.strftime('%l:%M%P') %></td>
        <td><%= fixture.home %></td>
        <td><%= fixture.home_score %> - <%= fixture.away_score %></td>
        <td><%= fixture.away %></td>
        <td><%= fixture.venue %></td>
        <td><i class="fa-solid fa-circle-chevron-right"/></td>
      </tr>
    <% end %>

  </table>
<% end %>
